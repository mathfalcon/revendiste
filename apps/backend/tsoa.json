{
  "entryFile": "./src/server.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["src/controllers/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@revendiste/shared": ["../../packages/shared/src"],
      "@revendiste/shared/*": ["../../packages/shared/src/*"],
      "@revendiste/transactional": ["../../packages/transactional/src"],
      "@revendiste/transactional/*": ["../../packages/transactional/src/*"]
    },
    "strictNullChecks": true
  },
  "spec": {
    "host": null,
    "specVersion": 3,
    "outputDirectory": "./src/swagger"
  },
  "routes": {
    "routesDir": "./src",
    "middleware": "express"
  }
}
