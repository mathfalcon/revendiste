# AWS Configuration
aws_region     = "sa-east-1"
instance_type  = "t3.micro"
key_pair_name  = "revendiste-dev-keypair"

# GitHub Actions SSH Public Key
# Generate with: ssh-keygen -t ed25519 -C "github-actions" -f ~/.ssh/github-actions
# Then add public key content here
github_actions_ssh_public_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAA..."

# Domain Configuration
domain_name  = "dev.revendiste.com"
api_subdomain = "api.dev"

# Security
allowed_ssh_cidr_blocks  = ["0.0.0.0/0"]  # Restrict in production!
allowed_http_cidr_blocks = ["0.0.0.0/0"]

# Cloudflare R2 Configuration
cloudflare_api_token = "your-cloudflare-api-token"
cloudflare_account_id = "your-cloudflare-account-id"
r2_bucket_name       = "revendiste-dev-storage"
r2_bucket_location   = "WEUR"  # Western Europe

# NOTE: Secrets are NOT stored in Terraform variables for security
# After running terraform apply, manually create the secret in AWS Secrets Manager:
# 1. Go to AWS Secrets Manager console
# 2. Find secret: revendiste/dev/backend-secrets (created by Terraform)
# 3. Click "Retrieve secret value" â†’ "Edit"
# 4. Paste the JSON with all backend environment variables
# 
# See README.md for the exact JSON format required


