{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "emails/**/*.tsx",
        "tsup.config.ts",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": ["apps/**/build/**", "packages/**/dist/**"]
    },
    "lint": {
      "dependsOn": [],
      "outputs": [],
      "cache": false,
      "persistent": false
    }
  }
}
